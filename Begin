#include <iostream>
#include <cmath>

void begin7(int r);
void begin10(int a, int b);
void begin15(double s);
void begin22(int x, int y);
const double PI = 3.14;

using namespace std;

int main() {
    int circleRadius;
    cout << " Введите число a: ";
    cin >> circleRadius;
    begin7(circleRadius);

    int a = 13;
    int b = 34;
    begin10(a, b);

    double circleArea = 98;
    begin15(circleArea);

    int first = 34;
    int second = 12;
    begin22(first, second);

    return 0;
}

void begin7(int r) {
    printf("Begin7\n");
    printf("Circle radius: %d\n", r);
    double l = 2 * PI * r;
    double s = PI * pow(r, 2);
    printf("Circle length: %f\n", l);
    printf("Circle area: %f\n\n", s);
}

void begin10(int a, int b) {
    printf("Begin10\n");
    printf("Input parameters: a: %d, b: %d\n", a, b);
    int sum = a + b;
    int sub = a - b;
    int div = a * b;
    double ww = pow(a, 2) / pow(b, 2);
    printf("Sum: %d\n", sum);
    printf("Sub: %d\n", sub);
    printf("Div: %d\n", div);
    printf("Residual: %f\n\n", ww);
}

void begin15(double s) {
    printf("Begin10\n");
    printf("Circle Area: %f\n", s);
    double d = sqrt(4 * s / PI);
    double l = PI * d;
    printf("Circle diameter: %f\n", d);
    printf("Circle length: %f\n\n", l);
}

void begin22(int x, int y) {
    printf("Begin22\n");
    int a = x;
    int b = y;
    int c = a;
    a = b;
    b = c;
    printf("x: %d\n", a);
    printf(" y: %d\n",b);



}
                       
